// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manager {
    id Int @id @default(autoincrement())
  username String @unique 
  name String 
  password String
}

model Teacher {
  id Int @id @default(autoincrement())
  username String @unique
  name String
  password String
}
model Student {
  id Int @id @default(autoincrement())
  username String @unique 
  name String 
  password String
}
